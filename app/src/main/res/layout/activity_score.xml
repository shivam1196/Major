<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fblogin.Score"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:fontFamily="casual"
        android:text="Welcome to SecureX"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtViewScore1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Choose Your Profession"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/ScoreSpinner1"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/txtViewScore2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Choose your Category"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/ScoreSpinner2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/ScoreSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit "
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>
